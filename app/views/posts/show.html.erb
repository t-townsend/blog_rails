

            <!-- post -->
            <div class="container-fluid no-padding">
                <div class="row">
                    <div class="col-md-12">

                        <%= image_tag @post.image.url, alt: "placeholder", class: "stop img-responsive" %>
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="container">
                <h1><%= @post.title %></h1>
            </div>
            <div class="container">
                <p><%= @post.body %></p>
                <hr>
                <p style="text-align: right;"><%= l Time.now, format: :long %></p>
                <% if can? :edit, @post %>
                <%= link_to "Edit", edit_post_path(@post), class: "btn btn-primary" %>
                <% end %>

                <% if can? :destroy, @post %>
                <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure"}, class:"btn btn-danger" %>
                <% end %>
            </div>

