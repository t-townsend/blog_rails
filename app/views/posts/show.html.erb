                <p><%= @post.body %></p>
            </div>
            <br>
            <hr>
            <!-- author avatar and text -->
            <div class="container">
                <div class="well">
                    <div class="row">
                        <div class="col-xs-6 col-md-3">
                            <a href="#" class="thumbnail">
                                <img src="<%= asset_path @user.avatar %>" alt="avatar">
                            </a>
                        </div>
                        <h3><%= @user.name %></h3>
                        <p><%= @user.body%></p>
                    </div>
                </div>
            </div>
            <br>
            <hr>
