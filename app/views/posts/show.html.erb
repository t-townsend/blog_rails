                        </form>
                    </div>
                    <!-- /.navbar-collapse -->
                </div>
                <!-- /.container-fluid -->
            </nav>

            <!-- post -->
            <div class="container-fluid no-padding">
                <div class="row">
                    <div class="col-md-12">
                        <img src="/photos/<%= @post.image %>" alt="placeholder 960" class="stop img-responsive"/>
                    </div>
                </div>
            </div>
            <br>
            <br>
            <div class="container">
                <h1><%= @post.title %></h1>
            </div>
            <div class="container">
                <p><%= @post.body %></p>
